<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Student Share {% block title %}{% endblock %}</title>
    <style>
        @import '/css/basic.css';
        @import '/css/footer.css';
        @import '/css/nav.css';
    </style>
</head>
<body>

<!-- login header -->
<header>
    <!-- nav -->
    <nav>
        <nav>
            <ul>
                <li>
                    <a href="/">home</a>
                </li>
                <li>
                    <section>
                        {% if username %}
                            you are logged in as: {{ username }}
                            <br>
                            <a href="/logout">logout</a>
                        {% else %}
                            <a href="/login">Login</a>
                        {% endif %}
                    </section>
                </li>
            </ul>

            {# --------- secure links - only if logged in ----------- #}
            {% if username %}

                {% include 'admin/_lecturer.html.twig'  %}
            {% endif %}
        </nav>
    </nav>

    <!-- login / logout -->

</header>



<hr>

{% block main %}
{% endblock %}

<footer>
    <p>
        Welcome to student share
    </p>
    <a href="/">Home</a> --- <a href="login">Login</a>
</footer>

</body>
</html>
